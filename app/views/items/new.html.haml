- if flash[:error].present?
  - flash[:error].each do |e|
    %ul
      %li=e


= form_for @item do |f|
  %ul
    %li 出品画像（未）
    %li 商品名
    = f.text_field :name
    %li 商品の説明
    = f.text_area :text
    %li カテゴリー（未）
    %li サイズ（未）
    %li ブランド（未）
    %li 商品の状態
    = f.select :condition, Item.conditions_i18n.invert, prompt:"---"
    %li 配送料の負担
    = f.select :defrayer, Item.defrayers_i18n.invert, prompt:"---"
    %li 発送元の地域
    = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt:"---"
    %li 発送までの日数
    = f.select :span, Item.spans_i18n.invert, prompt:"---"
    %li 価格
    = f.text_field :price
    %li
    = f.submit '出品する'
