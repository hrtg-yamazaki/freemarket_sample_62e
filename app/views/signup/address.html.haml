%h2 お届け先住所入力


= form_for @user do |f|

  = fields_for :address, @user.address || Address.new do |a|
    
    %h3 お名前(全角)
    = a.text_field :first_name, autofocus: true, placeholder: "例) 山田"
    %br/
    = a.text_field :last_name, autofocus: true, placeholder: "例) 彩"

    %h3 お名前カナ(全角)
    = a.text_field :kana_first_name, autofocus: true, placeholder: "例) ヤマダ"
    %br/
    = a.text_field :kana_last_name, autofocus: true, placeholder: "例) アヤ"

    %h3 郵便番号
    = a.telephone_field :postal_code, autofocus: true, placeholder: "例) 123-4567"

    %h3 都道府県
    = a.select :prefecture, [["茨城県","茨城県"],["東京都","東京都"],["千葉県","千葉県"],["神奈川県","神奈川県"]]

    %h3 市区町村
    = a.text_field :city, autofocus: true, placeholder: "例) 横浜市緑区"

    %h3 番地
    = a.text_field :block, autofocus: true, placeholder: "例) 青山1-1-1"

    %h3 建物名
    = a.text_field :building, autofocus: true, placeholder: "例) 柳ビル103"

    %h3 電話番号
    = a.phone_field :tel, autofocus: true, placeholder: "例) 09012345678"

  %br/
  = f.submit "次へ進む"
  %br/
  %br/

= link_to "現状はボタンの代わりにこっちで遷移してください！", signup_card_path

